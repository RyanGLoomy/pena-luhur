{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.6.0"
    },
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "rewrites": [
    {
      "source": "/build/(.*)",
      "destination": "/dist/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.php"
    }
  ]
}
